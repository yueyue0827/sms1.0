<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app02.dao.GradeMapper">

  <!-- 查询所有学生id -->
  <select id="findAll" resultType="com.briup.app02.bean.Grade">
    select * from poll_grade
  </select>
  
  <!-- 查询某个学生id -->
   <select id="findById" parameterType="long" resultType="com.briup.app02.bean.Grade">
    select * from poll_grade where id = #{id}
  </select>
  
  <!-- 保存学生信息 -->
  <insert id="save" parameterType="com.briup.app02.bean.Grade">
  	insert into poll_grade values(null,#{name},#{description})
  </insert>
  
  <!-- 修改学生信息 -->
  <update id="update" parameterType="com.briup.app02.bean.Grade">
  update poll_grade 
  set name = #{name} ,description = #{description}
  where id = #{id}
  </update>
  
  <!-- 删除学生信息 -->
  <delete id="deleteById" parameterType="long"> 
   delete from poll_grade where id = #{id}
  </delete>
</mapper>
